<div class="row">
    <div class="col-md-6 col-md-offset-3 user-form">
        <h1 class="form-heading">Sign In</h1>
        <%= form_for(:session, url: signin_path) do |f| %>
            <div class="form-group">
                <%= f.label :email, class: 'control-label' %>
                <%= f.email_field :email, class: 'form-control input-lg', placeholder: 'username@example.com' %>
            </div>
            <div class="form-group">
                <%= f.label :password, class: 'control-label' %>
                <%= f.password_field :password, class: 'form-control input-lg', placeholder: 'password' %>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <%= f.label :remember_me do %>
                        <%= f.check_box :remember_me, class: 'checkbox' %>
                        <span>Remember me</span>
                    <% end %>
                </div>
            </div>
            <button type="submit" class="btn btn-lg btn-success">Sign In</button>
        <% end %>
        <p class="text-center help-block form-link">Forgot your password? <%= link_to 'Reset here', new_password_reset_path %></p>
        <p class="text-center help-block form-link">Don't have an account? <%= link_to 'Sign Up', signup_path %></p>
    </div>
</div>
