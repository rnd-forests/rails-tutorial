<% provide :title, 'Members' %>
<div class="col-md-4 col-md-offset-4 users-list">
    <div class="list-group">
        <a class="list-group-item active"><h4>Active Members</h4></a>
        <% @users.each do |user| %>
            <%= link_to user, class: 'list-group-item' do %>
                <%= user_gravatar(user, size: 120) %>
                <h4 class="list-group-item-heading"><%= user.name %></h4>
                <div class="list-group-item-text">
                    <h5><%= user.email %></h5>
                    <p>
                        <span class="label label-success"><%= pluralize(user.followers.count, 'follower') %></span>
                        <span class="label label-danger"><%= user.following.count %> following</span>
                    </p>
                </div>
            <% end %>
        <% end %>
    </div>
    <div class="text-center"><%= will_paginate @users, previous_label: '&laquo;', next_label: '&raquo;' %></div>
</div>
