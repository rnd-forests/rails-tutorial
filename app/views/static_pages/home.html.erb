<% if logged_in? %>
    <% provide :title, 'Articles Feed' %>
    <div class="row">
        <div id="search-form"><%= render 'partials/search_form' %></div>
        <div class="col-md-8"><%= render 'partials/feed' %></div>
        <div class="col-md-4"><%= render 'layouts/sidebar' %></div>
    </div>
<% else %>
    <% provide :title, 'Home' %>
    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron home-welcome">
                <h1 class="text-center">"Simplicity is the ultimate sophistication."</h1>
                <%= link_to image_tag('ruby-logo.svg', alt: 'Ruby logo') %>
            </div>
        </div>
    </div>
<% end %>
