<% if logged_in? %>
    <% provide :title, 'Articles Feed' %>
    <div class="row">
        <div id="search-form"><%= render 'partials/search_form' %></div>
        <div class="col-md-8"><%= render 'partials/feed' %></div>
        <div class="col-md-4"><%= render 'layouts/sidebar' %></div>
    </div>
<% else %>
    <% provide :title, 'Home' %>
    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron home-welcome">
                <h2 class="text-center">"Simplicity is the ultimate sophistication."</h2>
                <h4>Leonardo da Vinci</h4>
                <%= link_to image_tag('bg-ruby-code-school-learn-by-doing.svg', alt: 'Ruby logo') %>
            </div>
        </div>
    </div>
<% end %>
