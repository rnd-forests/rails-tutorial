<% provide :title, 'Tags' %>
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="text-center" style="padding: 10px 0 15px 0">
            <%= link_to untagged_articles_path, class: 'text-danger' do %>
                Untagged articles? Click here <span class="fa fa-arrow-circle-right"></span>
            <% end %>
        </div>
        <div class="list-group">
            <a class="list-group-item active"><span class="glyphicon glyphicon-tags"></span></a>
            <% @tags.each do |tag| %>
                <%= link_to tag_path(tag), class: 'list-group-item' do %>
                    <span class="badge"><%= pluralize(tag.articles.count, 'article') %></span>
                    <%= tag.name %>
                <% end %>
            <% end %>
        </div>
    </div>
</div>