<div class="media">
    <div class="media-left">
        <div class="comment_user_avatar">
            <%= link_to user_gravatar(comment.comment_author, size: 40), comment.comment_author %>
        </div>
    </div>
    <div class="media-body">
        <div class="pull-right">
            <div class="dropdown">
                <span class="glyphicon glyphicon-menu-down dropdown-toggle" id="comment-settings" data-toggle="dropdown"></span>
                <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="comment-settings">
                    <% if current_user?(comment.comment_author) %>
                        <li>
                            <%= link_to comment, method: :delete, data: { confirm: 'Do you want to delete this comment?' } do %>
                                <span class="glyphicon glyphicon-trash"></span>Delete
                            <% end %>
                        </li>
                    <% end %>
                    <li><a href="#"><span class="glyphicon glyphicon-thumbs-down"></span>Report</a></li>
                </ul>
            </div>
        </div>
        <h4 class="media-heading"><%= link_to comment.comment_author.name, comment.comment_author %></h4>
        <h6 class="comment-timer"><%= time_ago_in_words(comment.created_at) %> ago</h6>
        <p><%= comment.body %></p>
    </div>
</div>