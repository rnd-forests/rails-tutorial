<div class="media">
    <div class="media-left">
        <div class="comment_user_avatar">
            <%= link_to user_gravatar(comment.comment_author, size: 40), comment.comment_author %>
        </div>
    </div>
    <div class="media-body">
        <h4 class="media-heading"><%= link_to comment.comment_author.name, comment.comment_author %></h4>
        <h6 class="comment-timer"><%= time_ago_in_words(comment.created_at) %> ago</h6>
        <% if current_user?(comment.comment_author) %>
            <%= link_to simple_format('', {class: 'glyphicon glyphicon-trash'}, {wrapper_tag: 'span'}), comment, method: :delete,
                        data: { confirm: 'Do you want to delete this comment?' } %>
        <% end %>
        <p><%= comment.body %></p>
    </div>
</div>