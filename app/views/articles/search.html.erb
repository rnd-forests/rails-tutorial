<h2 class="section-title">
    Search Results for <span class="search-keyword"><%= @keyword %></span>
    (<%= pluralize(@articles.count, 'article') %> found)
</h2>
<% if @articles.any? %>
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="posts-wrapper">
                <%= render @articles %>
                <div class="text-center"><%= will_paginate @articles, previous_label: '&laquo;', next_label: '&raquo;' %></div>
            </div>
        </div>
    </div>
<% else %>
    <h4 class="text-center text-warning">Nothing found, please try a different keyword.</h4>
<% end %>
