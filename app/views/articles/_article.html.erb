<div class="media">
    <div class="media-left"><%= link_to user_gravatar(article.user, size: 60), article.user %></div>
    <div class="media-body">
        <div class="btn-group pull-right">
            <span class="glyphicon glyphicon-menu-down dropdown-toggle" data-toggle="dropdown"></span>
            <ul class="dropdown-menu">
                <li><%= link_to 'Read more', article %></li>
                <% if current_user?(article.user) %>
                    <li><%= link_to 'Edit', edit_article_path(article) %></li>
                    <li><%= link_to 'Delete', article, method: :delete, data: { confirm: 'Do you want to delete this article?' } %></li>
                <% end %>
            </ul>
        </div>
        <h3 class="media-heading">
            <%= link_to article.title, article, class: 'article-title' %>
            <span class="text-muted">by</span>
            <%= link_to article.user.name, article.user, class: 'article-author' %>
        </h3>
        <%= render 'partials/tags', object: article %>
        <p class="post-timer"><span class="glyphicon glyphicon-time"></span>Published <%= time_ago_in_words(article.created_at) %> ago</p>
        <div class="post-content">
            <%= image_tag(article.picture.url) if article.picture? %>
            <%= truncate(strip_tags(article.content), length: 200) %>
        </div>
    </div>
</div>
